{% extends 'layouts/page.njk' %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">{{ panelTitle }}</h1>
        <div class="govuk-panel__body">
          {{ prnNumberLabel }}<br>
          <strong>{{ prnNumber }}</strong>
        </div>
      </div>

      {{ govukButton({
        text: viewPrnText,
        href: viewPrnUrl,
        classes: "govuk-button--secondary",
        attributes: {
          target: "_blank"
        }
      }) }}

      <p class="govuk-body">
        <a class="govuk-link" href="{{ createPrnUrl }}">{{ createPrnText }}</a>
      </p>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ managePrnsUrl }}">{{ managePrnsText }}</a>
      </p>

      <p class="govuk-body">
        <a class="govuk-link" href="{{ returnToHomeUrl }}">{{ returnToHomeText }}</a>
      </p>

    </div>
  </div>
{% endblock %}
