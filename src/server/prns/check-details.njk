{% extends 'layouts/page.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ govukBackLink({
    text: localise("common:back"),
    href: backUrl
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">{{ heading }}</h1>

      <p class="govuk-body">{{ leadParagraph }}</p>

      <div class="govuk-inset-text">
        {{ insetText }}
      </div>

      <h2 class="govuk-heading-l">{{ prnDetailsHeading }}</h2>

      {{ govukSummaryList({
        rows: prnDetails
      }) }}

      <h2 class="govuk-heading-l">{{ accreditationDetailsHeading }}</h2>

      {{ govukSummaryList({
        rows: accreditationDetails
      }) }}

      <div class="govuk-button-group">
        <a class="govuk-link" href="{{ startAgainUrl }}">{{ startAgainText }}</a>
      </div>

    </div>
  </div>
{% endblock %}
