{% extends 'layouts/page.njk' %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-panel govuk-panel--confirmation">
      <h1 class="govuk-panel__title">
        {{ heading }}
      </h1>
      <div class="govuk-panel__body">
        {{ tonnageLabel }}<br>
        <strong>{{ tonnage }} {{ tonnageSuffix }}</strong>
      </div>
    </div>

    <h2 class="govuk-heading-m">{{ nextStepsHeading }}</h2>

    <p class="govuk-body">
      {{ nextStepsText }}
    </p>

    <p class="govuk-body">
      <a href="/organisations/{{ organisationId }}/registrations/{{ registrationId }}" class="govuk-link">{{ returnLink }}</a>
    </p>
  </div>
</div>
{% endblock %}
