{% extends 'layouts/page.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block beforeContent %}
  {% if backUrl %}
    {{ govukBackLink({
      text: localise("common:back"),
      href: backUrl
    }) }}
  {% endif %}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {% if errors %}
      {{ govukErrorSummary({
        titleText: errorSummary.title,
        errorList: errorSummary.list
      }) }}
    {% endif %}

    <h1 class="govuk-heading-xl">{{ heading }}</h1>

    {% if insetText %}
      {{ govukInsetText({
        text: insetText
      }) }}
    {% endif %}

    {% if viewLink %}
      <p class="govuk-body">
        <a href="{{ viewLink.href }}" class="govuk-link" target="_blank" rel="noopener noreferrer">{{ viewLink.text }}</a>
      </p>
    {% endif %}

    <h2 class="govuk-heading-m">{{ prnDetailsHeading }}</h2>

    {{ govukSummaryList({
      rows: prnDetailRows
    }) }}

    <h2 class="govuk-heading-m">{{ accreditationDetailsHeading }}</h2>

    {{ govukSummaryList({
      rows: accreditationRows
    }) }}

    {% if issueButton %}
      <form method="POST" action="{{ issueButton.action }}" novalidate>
        <input type="hidden" name="crumb" value="{{ crumb }}" />

        <div class="govuk-button-group">
          {{ govukButton({
            text: issueButton.text
          }) }}

          {% if deleteButton %}
            {{ govukButton({
              text: deleteButton.text,
              href: deleteButton.href,
              classes: "govuk-button--secondary"
            }) }}
          {% endif %}
        </div>
      </form>
    {% endif %}

    {% if returnLink %}
      <p class="govuk-body">
        <a href="{{ returnLink.href }}" class="govuk-link">{{ returnLink.text }}</a>
      </p>
    {% endif %}
  </div>
</div>
{% endblock %}
