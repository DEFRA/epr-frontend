{% extends 'layouts/page.njk' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ localise('contact:heading') }}</h1>

      <p class="govuk-body-l">{{ localise('contact:subheading') }}</p>

      <p class="govuk-body">{{ localise('contact:regulatorIntro') }}</p>

      <h2 class="govuk-heading-s">{{ localise('contact:regulators:environmentAgency:name') }}</h2>
      <p class="govuk-body">
