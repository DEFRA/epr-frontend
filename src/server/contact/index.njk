        {{ localise('contact:phone') }} {{ localise('contact:regulators:environmentAgency:phone') }}
      </p>

      <h2 class="govuk-heading-s">{{ localise('contact:regulators:naturalResourcesWales:name') }}</h2>
      <p class="govuk-body">
        {{ localise('contact:email') }} <a href="mailto:{{ localise('contact:regulators:naturalResourcesWales:email') }}" class="govuk-link">{{ localise('contact:regulators:naturalResourcesWales:email') }}</a><br>
        {{ localise('contact:phone') }} {{ localise('contact:regulators:naturalResourcesWales:phone') }}
      </p>

      <h2 class="govuk-heading-s">{{ localise('contact:regulators:sepa:name') }}</h2>
      <p class="govuk-body">
        {{ localise('contact:email') }} <a href="mailto:{{ localise('contact:regulators:sepa:email') }}" class="govuk-link">{{ localise('contact:regulators:sepa:email') }}</a><br>
        {{ localise('contact:phone') }} {{ localise('contact:regulators:sepa:phone') }}
      </p>

      <h2 class="govuk-heading-s">{{ localise('contact:regulators:niea:name') }}</h2>
      <p class="govuk-body">
        {{ localise('contact:email') }} <a href="mailto:{{ localise('contact:regulators:niea:email') }}" class="govuk-link">{{ localise('contact:regulators:niea:email') }}</a><br>
