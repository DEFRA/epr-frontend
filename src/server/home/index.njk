{% extends 'layouts/page.njk' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <div class="govuk-body" data-testid="app-page-body">
        <a href="{{ langPrefix }}/#" class="govuk-back-link">{{localise("common:back")}}</a>

        {% if isDefraIdEnabled %}
          {% if authedUser and authedUser.displayName %}
            <div class="govuk-panel govuk-panel--confirmation" style="background-color: #f3f2f1; border: 2px solid #1d70b8;">
              <div class="govuk-panel__body" style="color: #0b0c0c;">
                {{localise("home:greeting")}}, <strong>{{ authedUser.displayName }}</strong>
              </div>
            </div>
            <p class="govuk-body">
              <a href="/logout" class="govuk-link">Sign out</a>
            </p>
            <details class="govuk-details">
              <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">
                  View your account details
                </span>
              </summary>
              <div class="govuk-details__text">
                <dl class="govuk-summary-list">
                  {% for key, value in authedUser %}
                    <div class="govuk-summary-list__row">
                      <dt class="govuk-summary-list__key">{{ key }}</dt>
                      <dd class="govuk-summary-list__value"><code>{{ value }}</code></dd>
                    </div>
                  {% endfor %}
                </dl>
              </div>
            </details>
          {% else %}
            <p class="govuk-body">
              Welcome, guest!
            </p>
            <p class="govuk-body">
              You can <a id="login-link" href="/login" class="govuk-link">sign in</a> to access your account.
            </p>
          {% endif %}
        {% endif %}

        <nav class="govuk-breadcrumbs govuk-!-margin-top-3">
          <ol class="govuk-breadcrumbs__list">
            <li class="govuk-breadcrumbs__list-item">
              <a href="{{ langPrefix }}/" class="govuk-breadcrumbs__link">{{ pageTitle }}</a>
            </li>
          </ol>
        </nav>
        <h1 class="govuk-heading-l govuk-!-margin-top-4">Sites</h1>
        <h2 class="govuk-heading-m">Select site and material</h2>

        <h3 class="govuk-heading-s govuk-!-margin-top-6">South Road</h3>

        <table class="govuk-table">
          <caption class="govuk-visually-hidden">Available waste balance for South Road</caption>
          <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header">Material</th>
              <th scope="col" class="govuk-table__header">Status</th>
              <th scope="col" class="govuk-table__header">Available waste balance</th>
            </tr>
          </thead>
          <tbody class="govuk-table__body">
            <tr class="govuk-table__row">
              <td class="govuk-table__cell">
                <a href="{{ langPrefix }}/organisations/123/registrations/456" class="govuk-link">Paper and board</a>
              </td>
              <td class="govuk-table__cell">Accredited</td>
              <td class="govuk-table__cell">23,495 tonnes</td>
            </tr>
            <tr class="govuk-table__row">
              <td class="govuk-table__cell">
                <a href="{{ langPrefix }}/organisations/123/registrations/456" class="govuk-link">Plastic</a>
              </td>
              <td class="govuk-table__cell">Accredited</td>
              <td class="govuk-table__cell">18,019 tonnes</td>
            </tr>
            <tr class="govuk-table__row">
              <td class="govuk-table__cell">
                <a href="{{ langPrefix }}/organisations/123/registrations/456" class="govuk-link">Steel</a>
              </td>
              <td class="govuk-table__cell">Not accredited</td>
              <td class="govuk-table__cell"></td>
            </tr>
          </tbody>
        </table>

        <h3 class="govuk-heading-s govuk-!-margin-top-6">South Road</h3>

        <table class="govuk-table">
          <caption class="govuk-visually-hidden">Available waste balance for South Road</caption>
          <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header">Material</th>
              <th scope="col" class="govuk-table__header">Status</th>
              <th scope="col" class="govuk-table__header">Available waste balance</th>
            </tr>
          </thead>
          <tbody class="govuk-table__body">
            <tr class="govuk-table__row">
              <td class="govuk-table__cell">
                <a href="{{ langPrefix }}/organisations/123/registrations/456" class="govuk-link">Paper and board</a>
              </td>
              <td class="govuk-table__cell">Accredited</td>
              <td class="govuk-table__cell">23,495 tonnes</td>
            </tr>
            <tr class="govuk-table__row">
              <td class="govuk-table__cell">
                <a href="{{ langPrefix }}/organisations/123/registrations/456" class="govuk-link">Plastic</a>
              </td>
              <td class="govuk-table__cell">Accredited</td>
              <td class="govuk-table__cell">18,019 tonnes</td>
            </tr>
            <tr class="govuk-table__row">
              <td class="govuk-table__cell">
                <a href="{{ langPrefix }}/organisations/123/registrations/456" class="govuk-link">Steel</a>
              </td>
              <td class="govuk-table__cell">Not accredited</td>
              <td class="govuk-table__cell"></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}