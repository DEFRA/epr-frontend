{% extends 'layouts/page.njk' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-body" data-testid="app-page-body">
        <form action="/login">
          <h1 class="govuk-heading-l">Manage your packaging waste responsibilites</h1>
          <p class="govuk-body">This service helps UK-based reprocessors and exporters meet packaging waste regulations.</p>
          <p class="govuk-body">Use the service to manage your:</p>
          <ul class="govuk-list govuk-list--bullet">
            <li>registrations</li>
            <li>accreditations</li>
            <li>summary log</li>
            <li>regulator reports</li>
            <li>PRNs or PERNs</li>
          </ul>
          {{ govukButton({ text: "Start now" }) }}
        </form>
      </div>
    </div>
  </div>

{% endblock %}
