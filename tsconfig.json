{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "NodeNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "exclude": [".cache", ".public", ".server", "coverage", "node_modules"],
  "include": [
    "**/*.cjs",
    "**/*.d.ts",
    "**/*.js",
    ".eslintrc.*",
    ".prettierrc.*",
    ".vite/**/*.js"
  ]
}
