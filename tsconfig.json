{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "NodeNext",
    "noEmit": true,
    "paths": {
      "~/*": ["./*"],
      "#config/*": ["./src/config/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "exclude": [".cache", ".public", ".server", "coverage", "node_modules"],
  "include": ["**/*.cjs", "**/*.js", ".eslintrc.*", ".prettierrc.*"]
}
