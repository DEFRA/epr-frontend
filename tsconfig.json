{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "NodeNext",
    "noEmit": true,
    "paths": {
      "#client/*": ["./src/client/*"],
      "#config/*": ["./src/config/*"],
      "#locales/*": ["./src/locales/*"],
      "#server/*": ["./src/server/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "exclude": [".cache", ".public", ".server", "coverage", "node_modules"],
  "include": ["**/*.cjs", "**/*.js", ".eslintrc.*", ".prettierrc.*"]
}
